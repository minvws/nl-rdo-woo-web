{% import "document_macros.html.twig" as macro %}

{% if documentCount.total > 0 %}
<div class="mt-16">
    <h2 class="woo-h2 woo-h2-spacing" id="documenten">{{ 'global.documents' | trans }}</h2>

    {% form_theme form 'forms/public_form_theme.html.twig' %}
    {{ form_start(form, { 'attr' : { 'class': 'js-auto-submit-form p-0' }}) }}
        <h3 class="sr-only">{{ 'global.documents.filter_help' | trans }}</h3>
    {{ form_end(form) }}

    <div class="pt-4">
        <twig:Public:DownloadFilesForm
            action="{{ downloadUrl }}"
            canDownload="{{ public_docs.count > 0 }}"
            searchUrl="{{ searchUrl }}"
        />
    </div>

    {{ macro.document_tabs(public_docs, already_public_docs, not_public_docs, not_online_docs, '#documenten') }}
</div>
{% endif %}
