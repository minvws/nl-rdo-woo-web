<div class="border border-platinum flex rounded-xl">
    {% set canDownload = downloadUrl is defined %}
    {% set element = canDownload ? 'a' : 'span' %}

    {% if canDownload %}
        <a class="grow flex p-4 group" href="{{ downloadUrl }}">
    {% else %}
        <span class="grow flex p-4">
    {% endif %}
            <span class="mr-2">
                <twig:Admin:MimeTypeIcon class="group-hover:hidden group-focus:hidden" mimeType="{{ mimeType }}" size="20" />
                <twig:Admin:Icon class="hidden relatvie right-2 group-hover:inline-block group-focus:inline-block" name="download" size="20" />
            </span>
            <span class="grow pt-1.5">
                <span class="block font-bold leading-none group-hover:text-sea-blue group-focus:text-sea-blue">
                    {{ fileName }}
                </span>
                {% if fileSize is defined %}
                <span class="text-sm text-independence">{{ fileSize | size }}</span>
                {% endif %}
            </span>
        </{{ element }}>

    {% if deleteUrl is defined %}
    <a class="p-4 text-dim-gray hover-focus:text-maximum-red" href="{{ deleteUrl }}">
        <twig:Admin:Icon color="fill-current" size="18" name="trash-bin" />
    </a>
    {% endif %}
</div>
