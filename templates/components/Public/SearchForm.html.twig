<form action="" method="post" role="search">
    <label for="{{ id }}" class="sr-only">{{ "Enter a search term" | trans }}</label>
    <div class="flex">
        <input
            class="woo-input-text mr-4"
            id="{{ id }}"
            name="q"
            placeholder="{{ "Enter a search term" | trans }}"
            type="text"
            value="{{ app.request.get('q') }}"
        />
        <button class="woo-button woo-button--primary" type="submit">
            <span class="sr-only md:not-sr-only md:mr-3">{{ "Search" | trans }}</span>
            <twig:Public:Icon name="magnifier" color="fill-white" size="20" />
        </button>
    </div>
</form>
