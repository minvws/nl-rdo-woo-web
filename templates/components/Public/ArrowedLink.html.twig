<a class="flex leading-tight py-1 sm:py-0.5 group" href="{{ to }}">
    <span class="grow">
        <span class="flex text-woo-sea-blue">
            <span class="mr-1"><twig:Public:Icon class="ml-0.5 mr-1 align-baseline" color="fill-current" name="chevron-right" size="12" /></span>
            <span class="group-hover:underline group-focus:underline">
                {% if prefix is not empty %}
                <span class="font-bold">{{ prefix }}</span> {{ prefixSeparator }}
                {% endif %}
                {% block content %}{% endblock %}
            </span>
        </span>
    </span>
    {% if suffix is not empty %}
    <span class="pt-0.5 ml-2 woo-muted text-sm">({{ suffix }})</span>
    {% endif %}
</a>
