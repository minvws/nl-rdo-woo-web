<section class="mb-5">
    <div class="card bg-light">
        <div class="card-header">
            <h3>{{ "Other documents in this decision" | trans }}</h3>
        </div>
        <div class="card-body">

            <table class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th>{{ "Document Number" | trans }}</th>
                        <th>{{ "File name" | trans }}</th>
                        <th>{{ "Size" | trans }}</th>
                        <th>{{ "Section" | trans }}</th>
                        <th>{{ "Page count" | trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for doc in dossier.documents %}
                    <tr>
                        <td nowrap>{{ doc.documentNr }}</td>
                        <td><i class="fa fa-file-pdf"></i> <a href="{{ path('app_document_detail', { dossierId: dossier.dossierNr, documentId: doc.documentNr }) }}">{{ doc.filename|basename }}</a></td>
                        <td class="text-end">{{ doc.filesize | size }}</td>
                        <td>{{ doc.sourceType | trans() }}</td>
                        <td>{{ "# pages" | trans({ 'count': doc.pagecount}) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
</section>
