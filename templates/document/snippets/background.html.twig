<div class="mt-16">
    <h2 class="woo-h2 woo-h2-spacing">{{ 'public.documents.background' | trans }}</h2>

    {% if document.entity.judgement.value is defined %}
    <p class="mb-6 woo-readable-width">
        {{ ('public.documents.judgement.' ~ document.entity.judgement.value) | trans }} {{ 'public.documents.why_judgement_was_made' | trans }} {{ 'More info about request below' | trans }}:
    </p>
    {% endif %}

    <div class="overflow-x-auto">
        <table class="woo-table">
            <caption class="sr-only">
                {{ 'public.documents.background' | trans }}
            </caption>
            <tbody>
                <tr>
                    <th class="woo-table-cell-light w-64 min-w-64" scope="row">{{ 'public.documents.part_of' | trans }}</th>
                    <td class="min-w-64">
                        <a class="woo-a" href="{{ path('app_woodecision_detail', { prefix: dossier.documentPrefix, dossierId: dossier.dossierNr }) }}">{{ dossier.title }}</a>
                    </td>
                </tr>
                <tr>
                    <th class="woo-table-cell-light" scope="row">{{ 'public.global.request_summary' | trans }}</th>
                    <td>
                        <p class="woo-readable-width">{{ dossier.summary }}</p>
                    </td>
                </tr>
                <tr>
                    <th class="woo-table-cell-light" scope="row">{{ 'global.period' | trans }}</th>
                    <td>{{ period(dossier.dateFrom, dossier.dateTo) }}</td>
                </tr>
                <tr>
                    <th class="woo-table-cell-light" scope="row">{{ 'public.global.decision_type' | trans }}</th>
                    <td>{{ dossier.publicationReason | trans }}</td>
                </tr>
                <tr>
                    <th class="woo-table-cell-light" scope="row">{{ 'public.global.decision_date' | trans }}</th>
                    <td><time datetime="{{ dossier.decisionDate | date('Y-m-d') }}">{{ dossier.decisionDate | format_date('long') }}</time></td>
                </tr>

                <tr>
                    <th class="woo-table-cell-light" scope="row">{{ 'public.publications.scope' | trans }}</th>
                    <td>
                        {% if dossier.counts.hasDocuments %}
                            {{ 'global.number_of_documents' | trans({'count': dossier.counts.documentCount})}}{% if dossier.counts.hasDocuments and dossier.counts.hasPages %},{% endif %}
                        {% endif %}

                        {% if dossier.counts.hasPages %}
                            {{ 'global.number_of_pages' | trans({'count': dossier.counts.pageCount})}}
                        {% endif %}

                        {% if dossier.inventory is not null  %}
                            <a class="woo-a" href="{{ path('app_woodecision_inventory_download', { prefix: dossier.documentPrefix, dossierId: dossier.dossierNr }) }}" download>{{ 'public.publications.inventory_list' | trans }}</a>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
