{% if document.ingested and document.entity.shouldBeUploaded and document.entity.fileInfo.isUploaded %}
<div class="mt-10">
    <a
        class="focus:mb-4 woo-skip-link"
        href="#below-carousel"
        id="above-carousel"
    >{{ "Skip documents preview" | trans }}</a>

    {% if document.entity.fileInfo.type == "pdf" and document.entity.pageCount > 0 %}
        <p class="pb-1 woo-muted text-sm">
            {{
                "Click on a page to open the {fileInfo} ({fileSize}) in your browser" |
                trans({ fileInfo: document.entity.fileInfo.type|upper, fileSize: document.entity.fileInfo.size != "0" ? document.entity.fileInfo.size | size : ""  })
            }}
        </p>
        {% include "document/snippets/carousel.html.twig" %}
    {% endif %}

    <a
        class="focus:mt-4 woo-skip-link"
        href="#above-carousel"
        id="below-carousel"
    >{{ "Go back to documents preview" | trans() }}</a>
</div>
{% endif %}
