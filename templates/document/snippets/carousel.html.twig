<div class="min-h-[333px]">
    <div class="woo-carousel" role="region" aria-label="{{ "Document preview" | trans() }}">
        <ol class="woo-carousel__list">
        {% for page in range(1, document.entity.pageCount) %}
            <li>
                {% if has_thumbnail(document.entity, page) %}
                    <span class="sr-only">{{ "Download ({fileInfo} {fileSize}) or open page" | trans({ fileInfo: document.entity.fileInfo.type|upper, fileSize: document.entity.fileInfo.size != "0" ? document.entity.fileInfo.size | size : ""  }) }} {{ page }}</span>
                    <a class="woo-carousel__a" href="{{ path('app_document_download', { prefix: dossier.entity.documentPrefix, dossierId: dossier.entity.dossierNr, documentId: document.entity.documentNr}) }}#page={{page}}">
                        <img
                            alt="{{ "Page" | trans }} {{ page }}"
                            class="woo-carousel__img"
                            height="285"
                            loading="lazy"
                            src="{{ path('app_document_thumbnail', { prefix: dossier.entity.documentPrefix, dossierId: dossier.entity.dossierNr, documentId: document.entity.documentNr, pageNr: page}) }}"
                            width="204"
                        />
                    </a>
                {% else %}
                 <div class="woo-carousel__a">
                    <img
                        alt="{{ "This page is not yet processed by our system" | trans }}"
                        class="woo-carousel__img shadow-none"
                        src="{{ path('app_document_thumbnail', { prefix: dossier.entity.documentPrefix, dossierId: dossier.entity.dossierNr, documentId: document.entity.documentNr, pageNr: page}) }}"
                        width="204"
                        height="285"
                    />
                </div>
                {% endif %}
            </li>
        {% endfor %}
        </ol>
    </div>
</div>
