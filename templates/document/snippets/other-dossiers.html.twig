<section class="mb-5">
    <div class="card bg-light">
        <div class="card-header">
            <h3>{{ "Other decisions in which this document appears" | trans() }}</h3>
        </div>
        <div class="card-body">

            <table class="table table-striped table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th>{{ "Title" | trans() }}</th>
                            <th>{{ "Description" | trans() }}</th>
                            <th>{{ "Document count" | trans }}</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for dossier in document.dossiers %}
                        <tr>
                            <td><a href="">{{ dossier.title }}</a></td>
                            <td>{{ dossier.summary }}</td>
                            <td>{{ "# documents" | trans({ 'count': dossier.documents|length}) }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

        </div>
    </div>
</section>
