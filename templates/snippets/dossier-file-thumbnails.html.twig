<div class="min-h-[333px]">
    <div class="woo-carousel" role="region" aria-label="{{ 'public.documents.viewer.document_preview' | trans }}">
        <ol class="woo-carousel__list">
            {% for page in file.pages %}
                <li>
                    {% if page.hasThumbnail %}
                        <a class="woo-carousel__a" href="{{ page.viewUrl }}">
                            <img
                                alt="{{ 'global.page' | trans }} {{ page.pageNr }}"
                                class="woo-carousel__img"
                                height="285"
                                loading="lazy"
                                src="{{ page.thumbnailUrl }}"
                                width="204"
                            />
                            <span class="sr-only">{{ 'public.inquiries.document.open_or_download' | trans({ fileInfo: file.type|upper, fileSize: file.size != '0' ? file.size | size : ""  }) }} {{ page.pageNr }}</span>
                        </a>
                    {% else %}
                        <div class="woo-carousel__a">
                            <img
                                alt="{{ 'public.documents.viewer.page_not_yet_processed' | trans }}"
                                class="woo-carousel__img shadow-none"
                                src="{{ page.thumbnailUrl }}"
                                width="204"
                                height="285"
                            />
                        </div>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </div>
</div>
