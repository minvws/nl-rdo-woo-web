{% set fallbackTitle = ('public.dossiers.attachments' | trans) ~ ' ' ~ (dossier.type | trans | lower) %}
<div class="mt-16">
    <h2 class="woo-h2 woo-h2-spacing">
        {{ title | default(fallbackTitle) }}
    </h2>
    <div class="woo-responsive-table">
        <table class="woo-table">
            <caption class="sr-only">
                {{ title | default(fallbackTitle) }}
            </caption>
            <tbody>
                <tr>
                    <th class="woo-table-cell-light w-64 min-w-64" scope="row">
                        {{ documentType | default(dossier.type | trans | capitalize) }}
                    </th>
                    <td>
                        <a class="woo-a" href="{{ document.detailsUrl }}">{{ document.name }}</a> <span>({{ ('public.documents.file_type.' ~ document.sourceType) | trans }}, {{ document.size | size }})</span>
                    </td>
                </tr>
                {% for attachment in (attachments | default([])) %}
                <tr>
                    <th class="woo-table-cell-light" scope="row">{{ attachment.type | trans | capitalize }}</th>
                    <td>
                        <a class="woo-a" href="{{ attachment.detailsUrl }}">{{ attachment.name }}</a> ({{ ('public.documents.file_type.' ~ attachment.sourceType) | trans }}, {{ attachment.size | size }})
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
