                        <li>{{ 'public.woo-process.step-2a' | trans() | raw }}</li>
                        <li>{{ 'public.woo-process.step-2b' | trans() | raw }}</li>
                    </ul>
                    </li>
                <li>
                   {{ 'public.woo-process.step-3' | trans() | raw }}
                </li>
                <li>
                    {{ 'public.woo-process.step-4' | trans() | raw }}
                </li>
            </ul>
        </div>
    </div>
