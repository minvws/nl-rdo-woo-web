{% extends 'search/entries/base.html.twig' %}

{% set resultUrl = path('app_investigationreport_detail', { prefix: entry.dossier.documentPrefix, dossierId: entry.dossier.dossierNr }) %}
{% set resultType = 'dossier.type.investigation-report' | trans %}

{% block resultSpecsBottom %}
    <li class="woo-search-result__spec">
        {{ 'public.dossiers.investigation-report.date' | trans }} <twig:Date date="{{ entry.dossier.date }}" />
    </li>
    <li class="woo-search-result__spec">
        {{ 'global.published_on' | trans | capitalize }} <twig:Date date="{{ entry.dossier.publicationDate }}" />
    </li>
{% endblock %}
