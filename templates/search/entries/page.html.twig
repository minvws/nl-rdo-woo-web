<h3 class="text-xl items-center">
    <div class="de-emphasized mb-0 flex items-center">
        <span class="svg-icon svg-html mr-2 w-[24px] h-[24px]" aria-hidden="true"></span>
        <span class="visually-hidden">{{ entry.document.fileInfo.sourceType | trans() }}</span>
        <span class="de-emphasized ro-font-bold"> {{ entry.document.fileInfo.sourceType | trans() }}</span>
        <span>{{ "# pages" | trans({"count": entry.document.pagecount|default(0)})}}</span>
    </div>

    <a
        class="reverse-underline"
        href="{{ path('app_document_detail', { dossierId: entry.document.dossiers[0].dossierNr, documentId: entry.document.documentNr }) }}"
    >{{ "Page" | trans() }} {{ entry.elastic._source.page_nr }} {{ entry.document.fileInfo.name }}</a>
</h3>

{% if entry.highlights | length > 0 %}
<p class="ro-text-small leading-5 mt-1 mb-2 line-clamp-3">
    {% for hl in entry.highlights %}
        ... {{ hl | raw('html') }} {% if loop.last %}...{% endif %}
    {% endfor %}
</p>
{% endif %}

<ul class="list-unstyled de-emphasized mb-0 flex items-center pipe-after">
    <li>
        <time datetime="{{ entry.document.documentDate | date("Y-m-d") }}">
        {{ entry.document.documentDate | format_date('long') }}
        </time>
    </li>
    <li>
        <span>{{ "Document number" | trans }} {{ entry.document.documentId }}</span>
    </li>
</ul>

{% if entry.document.dossiers | length > 0 %}
<ul class="list-unstyled">
    {% for dossier in entry.document.dossiers %}
    <li class="py-0 ro-text-small leading-5">
        <a href="{{ path('app_dossier_detail', { dossierId: dossier.dossierNr }) }}">Besluit {{ dossier.title }}</a>
    </li>
    <li>
        <span class="de-emphasized">{{ "# documents" | trans({"count": dossier.documents|length})}}</span>
    </li>
    {% endfor %}
</ul>
{% endif %}
