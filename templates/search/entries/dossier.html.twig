<h3 class="text-xl flex flex-col-reverse">
    <a class="reverse-underline" href="{{ path('app_dossier_detail', { dossierId: entry.dossier.dossierNr }) }}">{{ entry.dossier.title }}</a>

    <div class="de-emphasized mb-0 flex items-center">
        <twig:Icon name="map" class="mr-2" />
        <span class="de-emphasized ro-font-bold pipe-after">{{ "Woo-dossier" | trans() }}</span>
        <span class="de-emphasized pipe-after">{{ "# documents" | trans({"count": entry.dossier.documents|length})}}</span>
        <span class="de-emphasized">{{ entry.dossier.decision | decision }}</span>
    </div>
</h3>

<p class="ro-text-small leading-5">{{ entry.dossier.summary | u.truncate(200, '...', false) }}</p>

{% if entry.highlights | length > 0 %}
<p class="ro-text-small leading-5 mt-1 mb-2 line-clamp-3">
    {% for hl in entry.highlights %}
        ... {{ hl | highlights }} {% if loop.last %}...{% endif %}
    {% endfor %}
</p>
{% endif %}

<ul class="list-unstyled de-emphasized mb-0 items-center pipe-after">
    <li>
        <time datetime="{{ entry.dossier.publicationDate | date("Y-m-d") }}" class="de-emphasized">{{ "Published on" | trans }} {{ entry.dossier.publicationDate | format_date('long') }}</time>
    </li>
    <li>
        <span class="de-emphasized">{{ entry.dossier.dossierNr}}</span>
    </li>
</ul>

