<header class="woo-search-result__header">
    <h3 class="woo-search-result__title">
        <a
            class="woo-search-result__main-link"
            data-e2e-name="main-link"
            href="{{ path('app_woodecision_detail', { prefix: entry.dossier.documentPrefix, dossierId: entry.dossier.dossierNr }) }}"
        >{{ entry.dossier.title }}</a>
    </h3>

    <ul class="woo-search-result__spec-list">
        <li class="woo-search-result__spec">
            <twig:Public:Icon name="map" class="mr-1" size="20" />
            <span class="font-bold">{{ 'public.global.woo_dossier' | trans }}</span>
        </li>
        <li class="woo-search-result__spec">
            {{ "global.number_of_documents" | trans({"count": entry.dossier.documentCount})}}</span>
        </li>
        <li class="woo-search-result__spec">
            {{ entry.dossier.decision | trans }}</span>
        </li>
    </ul>
</header>

{% if entry.dossier.summary %}
<p class="mt-1">{{ entry.dossier.summary | u.truncate(200, '...', false) }}</p>
{% endif %}

{% if entry.highlights | length > 0 %}
<p class="mt-1">
    {% for hl in entry.highlights %}
        ... {{ hl | highlights }} {% if loop.last %}...{% endif %}
    {% endfor %}
</p>
{% endif %}

<ul class="woo-search-result__spec-list">
    <li class="woo-search-result__spec">
        {{ 'global.decision_made' | trans }}&nbsp;<time datetime="{{ entry.dossier.decisionDate | date('Y-m-d') }}">{{ entry.dossier.decisionDate | format_date('long') }}</time>,
        {{ 'global.published_on' | trans | lower }}&nbsp;<time datetime="{{ entry.dossier.publicationDate | date("Y-m-d") }}">{{ entry.dossier.publicationDate | format_date('long') }}</time>
    </li>
    <li class="woo-search-result__spec">
        {{ entry.dossier.dossierNr}}
    </li>
</ul>
