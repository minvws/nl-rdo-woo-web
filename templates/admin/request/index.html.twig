{% extends 'base.html.twig' %}

{% set page_title = "Requests management" | trans() %}

{% block body %}

    <section>
        <div>

            <h1>{{ "Requests management" | trans() }}</h1>

            <p class="count">
                {{ "There are in total # requests found." | trans({'count' : pagination.getTotalItemCount}) }}
            </p>

            <table class="table table-striped">
                <tr>
                    <th>{{ "Case number" | trans() }}</th>
                    <th>{{ "Documents" | trans() }}</th>
                    <th>{{ "Last update" | trans() }}</th>
                    <th>{{ "Token" | trans() }}</th>
                    <th>{{ "Options" | trans() }}</th>
                </tr>

                {% for inquiry in pagination %}
                    <tr>
                        <td><a href="{{ PUBLIC_BASE_URL }}{{ path('app_inquiry_detail', { token: inquiry.token }) }}">{{ inquiry.casenr }}</td>
                        <td>{{ inquiry.documents | length }}</td>
                        <td>{{ inquiry.updatedAt|date('d-m-Y H:i:s') }}</td>
                        <td>{{ inquiry.token }} <i class="fa fa-copy"></i></td>
                        <td>
                            {#                    <a class="btn btn-sm btn-primary" href="{{ path('app_admin_request_edit', {id: inquiry.id}) }}">Modify</a> #}
                        </td>
                    </tr>
                {% endfor %}
            </table>

            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>

            {#    <a class="btn btn-primary" href="{{ path('app_admin_request_new') }}">Create new request</a> #}

        </div>
    </section>
{% endblock %}
