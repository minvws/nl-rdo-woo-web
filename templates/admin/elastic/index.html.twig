{% extends 'admin.html.twig' %}

{% block body %}
<div class="bhr-container">
    <h1 class="bhr-title mb-6">{{ 'elastic.label.management' | trans() }}</h1>

    <div class="bhr-card">
        {% set alerts = app.flashes('backend') %}
        {% if alerts | length > 0 %}
            <div class="mb-8">
                {% for messages in alerts %}
                    {% for label, message in messages %}
                        <twig:Admin:Alert type="{{ label }}">
                            <strong>{{ message }}</strong>
                        </twig:Admin:Alert>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

        {% if rolloverDetails %}
            <table>
                <caption class="sr-only">{{ 'elastic.rollover' | trans() }} {{ rolloverDetails.index.name }}</caption>
                <thead>
                    <tr>
                        <th>{{ 'public.global.label' | trans() }}</th>
                        <th>{{ 'public.global.expected' | trans() }}</th>
                        <th>{{ 'elastic.contains' | trans() }}</th>
                        <th>{{ 'elastic.percentage' | trans() }}</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>{{ 'admin.global.dossier_count' | trans() }}</td>
                        <td>{{ rolloverDetails.expectedDossierCount }}</td>
                        <td>{{ rolloverDetails.actualDossierCount }}</td>
                        <td>{{ rolloverDetails.getDossierPercentage() }}%</td>
                    </tr>
                    <tr>
                        <td>{{ 'admin.global.document_count' | trans() }}</td>
                        <td>{{ rolloverDetails.expectedDocCount }}</td>
                        <td>{{ rolloverDetails.actualDocCount }}</td>
                        <td>{{ rolloverDetails.getDocumentPercentage() }}%</td>
                    </tr>
                    <tr>
                        <td>{{ 'admin.global.page_count' | trans() }}</td>
                        <td>{{ rolloverDetails.expectedPageCount }}</td>
                        <td>{{ rolloverDetails.actualPageCount }}</td>
                        <td>{{ rolloverDetails.getPagePercentage() }}%</td>
                    </tr>
                </tbody>
            </table>

            <p class="pt-6">
                <a class="bhr-button bhr-button--primary" href="{{ path('app_admin_elastic_live', {indexName: rolloverDetails.index.name}) }}">{{ "admin.elastic.promote_to_live" | trans() }}</a>
            </p>

        {% else %}
            <p class="text-center italic">{{ "admin.elastic.no_rollover" | trans() }}</p>
        {% endif %}
    </div>

    <div class="bhr-card mt-10">
        <table class="bhr-table">
            <caption class="sr-only">{{ "admin.elastic.indexes" | trans() }}</caption>
            <thead>
                <tr>
                    <th class="text-left" scope="col">{{ 'global.name' | trans() }}</th>
                    <th class="text-left" scope="col">{{ 'elastic.health' | trans() }}</th>
                    <th class="text-left" scope="col">{{ 'elastic.status' | trans() }}</th>
                    <th class="text-right" scope="col">{{ 'elastic.object_count' | trans() }}</th>
                    <th class="text-right" scope="col">{{ 'public.global.size' | trans() }}</th>
                    <th class="text-left" scope="col">{{ 'admin.elastic.mapping_version' | trans() }}</th>
                    <th class="text-left" scope="col">{{ 'elastic.aliases' | trans() }}</th>
                    <th class="text-left" scope="col">{{ 'elastic.options' | trans() }}</th>
                </tr>
            </thead>

            <tbody>
            {% for index in indices %}
                <tr>
                    <td>{{ index.name }}</td>
                    <td>{{ index.health }}</td>
                    <td>{{ index.status }}</td>
                    <td class="text-right">{{ index.docsCount }}</td>
                    <td class="text-right">{{ index.storeSize }}</td>
                    <td>{{ index.mappingVersion }}</td>
                    <td>
                        {% for alias in index.aliases %}
                            <span>{{ alias }}</span>
                        {% endfor %}
                    </td>
                    <td>
                        <a class="bhr-a" href="{{ path('app_admin_elastic_details', {indexName: index.name}) }}">{{ 'global.details' | trans() }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p class="pt-6">
            <a class="bhr-button bhr-button--primary" href="{{ path('app_admin_elastic_create') }}">{{ "admin.elastic.new_rollover" | trans() }}</a>
        </p>
    </div>
</div>
{% endblock %}
