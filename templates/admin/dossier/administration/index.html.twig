{% extends 'admin.html.twig' %}

{% import "admin/macros/facet.html.twig" as macro %}

{% set page_title = 'admin.decisions.manage' | trans %}

{% block body %}
<div class="bhr-container">
    {{ wo_render_breadcrumbs({viewTemplate: 'navigation/breadcrumbs.admin.html.twig' }) }}

    <h1 class="bhr-title pb-6">{{ page_title }}</h1>

    <div class="bhr-card">
        {% set alerts = app.flashes('backend') %}
        {% if alerts | length > 0 %}
            <div class="mb-8">
                {% for messages in alerts %}
                    {% for label, message in messages %}
                        <twig:Admin:Alert type="{{ label }}">
                            <strong>{{ message }}</strong>
                        </twig:Admin:Alert>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

        {% if dossiers | length > 0 %}
            <table class="bhr-table">
                <thead>
                    <tr>
                        <th class="bhr-column-head bhr-column-head--gray" scope="col">{{ 'admin.dossiers.action.column.dossier_nr' | trans }}</th>
                        <th class="bhr-column-head bhr-column-head--gray" scope="col">{{ 'admin.dossiers.action.column.type' | trans }}</th>
                        <th class="bhr-column-head bhr-column-head--gray" scope="col">{{ 'admin.dossiers.action.column.status' | trans }}</th>
                        <th class="bhr-column-head bhr-column-head--gray" scope="col">{{ 'admin.dossiers.action.column.id' | trans }}</th>
                        <th class="bhr-column-head bhr-column-head--gray border-r-0" scope="col">{{ 'admin.dossiers.action.column.title' | trans }}</th>
                        <th class="bhr-column-head bhr-column-head--gray" scope="col">
                            <span class="sr-only">{{ 'global.details'| trans }}</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for dossier in dossiers %}
                        {% set url = path('app_admin_dossier_administration_details', {prefix: dossier.documentPrefix, dossierId: dossier.dossierNr}) %}
                        <tr class="bhr-clickable-row">
                            <td>
                                <a class="bhr-fill-cell" href="{{ url }}">
                                    {{ dossier.dossierNr }}
                                </a>
                            </td>
                            <td>
                                <a class="bhr-fill-cell" href="{{ url }}">
                                    {{ dossier.type | trans }}
                                </a>
                            </td>
                            <td>
                                <a class="bhr-fill-cell" href="{{ url }}">
                                    <twig:Admin:DossierStatusBadge status="{{ dossier.status }}" />
                                </a>
                            </td>
                            <td>
                                <a class="bhr-fill-cell" href="{{ url }}">
                                    {{ dossier.id }}
                                </a>
                            </td>
                            <td>
                                <a class="bhr-fill-cell" href="{{ url }}">
                                    {{ dossier.title }}
                                </a>
                            </td>
                            <td>
                                <a class="bhr-fill-cell" href="{{ url }}">
                                    <span class="sr-only">{{ 'global.details' | trans }} {{ dossier.dossierNr }}</span>
                                    <twig:Admin:Icon name="chevron-right" />
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-center">
                {{ 'admin.dossiers.action.no_dossiers' | trans }}
            </p>
        {% endif %}
    </div>
</div>
{% endblock %}
