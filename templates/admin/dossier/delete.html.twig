{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="bhr-container bhr-container--sm">
        <h1 class="bhr-title-lg mb-8">Verwijderen</h1>

        <div class="bhr-card">
            {% if success %}
                <p class="bhr-form-help text-lg mb-4">{{ 'admin.dossier.delete.started' | trans }}</p>
                <a class="bhr-btn-bordered-primary" href="{{ path('app_admin_dossiers') }}">{{ 'admin.dossier.delete.back_to_overview' | trans }}</a>
            {% else %}
                <p class="bhr-form-help text-lg mb-4">{{ 'admin.dossier.delete.confirm' | trans }}</p>
                {{ form(form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}
