{% extends 'admin.html.twig' %}

{% block inline_style %}
    {% include 'admin/dossier/concept/workflow-styles.html.twig' %}
{% endblock %}

{% block body %}
    <div class="bhr-container bhr-container--sm">
        <h1 class="bhr-title text-center mb-10">{{ dossier.title }}</h1>

        {% include 'admin/dossier/concept/workflow.html.twig' %}

        {% if dossier.needsInventoryAndDocuments %}
            {% include 'admin/dossier/form/documents.html.twig' %}
        {% else %}
            Op basis van het besluit '{{ dossier.decision | decision }}' heeft dit dossier geen productierapport en/of documenten.
        {% endif %}
    </div>
{% endblock %}
