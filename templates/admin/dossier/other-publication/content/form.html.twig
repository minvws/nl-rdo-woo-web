{{ form_start(form) }}
    {{ form_row(form.summary) }}

    <twig:Admin:Publication:ManageDocument
        allowedFileTypes="{{ documentTypeNames }}"
        allowedMimeTypes="{{ documentMimeTypes }}"
        canDelete="{{ canDeleteDocument }}"
        documentType="{{ 'admin.dossiers.other-publication.document' | trans }}"
        documentTypes="{{ documentTypes }}"
        endpoint="{{ '/balie/api/dossiers/' ~ dossier.id ~ '/other-publication-document' }}"
        formField="{{ form.document }}"
        grounds="{{ grounds }}"
        helpText="{{ 'admin.dossiers.other-publication.form.content.document_help' | trans }}"
        languages="{{ attachmentLanguages }}"
        title="{{ 'admin.dossiers.other-publication.form.content.document_label' | trans }}"
    />

    <twig:Admin:Publication:ManageAttachments
        allowedFileTypes="{{ attachmentTypeNames }}"
        allowedMimeTypes="{{ attachmentMimeTypes }}"
        canDelete="{{ canDeleteAttachments }}"
        documentTypes="{{ attachmentTypes }}"
        endpoint="{{ '/balie/api/dossiers/' ~ dossier.id ~ '/other-publication-attachments' }}"
        grounds="{{ grounds }}"
        helpText="{{ 'admin.dossiers.other-publication.form.content.attachments_help' | trans }}"
        languages="{{ attachmentLanguages }}"
    />

{{ form_end(form) }}
