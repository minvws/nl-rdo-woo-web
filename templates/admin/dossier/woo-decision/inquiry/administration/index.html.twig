{% extends 'admin/base.html.twig' %}

{% set page_title = 'admin.inquiries.manage' | trans %}

{% block body %}
<div class="bhr-container">
    {{ wo_render_breadcrumbs({viewTemplate: 'admin/layout/breadcrumbs.html.twig' }) }}

    <h1 class="bhr-title pb-6">{{ page_title }}</h1>

    <div class="bhr-card">
        {% include 'admin/shared/flash-messages.html.twig' %}

        {% if inquiries | length > 0 %}
            <table class="bhr-table">
                <thead>
                    <tr>
                        <th class="bhr-column-head bhr-column-head--gray" scope="col">Case nr</th>
                        <th class="bhr-column-head bhr-column-head--gray" scope="col">Database ID</th>
                    </tr>
                </thead>
                <tbody>
                    {% for inquiry in inquiries %}
                        <tr>
                            <td>
                                <a class="bhr-a js-bhr-clickable-row-link break-all" href="{{ path('app_admin_inquiry_administration_details', {casenr: inquiry.casenr}) }}">
                                    {{ inquiry.casenr }}
                                </a>
                            </td>
                            <td>
                                {{ inquiry.id }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-center">
                Er zijn nog geen zaken aangemaakt.
            </p>
        {% endif %}
    </div>
</div>
{% endblock %}
