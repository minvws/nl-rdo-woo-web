{% extends 'admin.html.twig' %}

{% set page_title = 'admin.organisation.manage' | trans() %}

{% block body %}
<div class="bhr-container">
    <twig:Admin:LeftAndRight>
        <h1 class="bhr-title">{{ page_title }}</h1>

        <twig:block name="right">
            {% if matrix_has_permission('organisation.create') %}
            <a class="bhr-button bhr-button--secondary" href="{{ path('app_admin_user_organisation_create') }}">{{ 'admin.organisation.create' | trans() }}</a>
            {% endif %}
        </twig:block>
    </twig:Admin:LeftAndRight>

    <div class="bhr-card">
        <table class="bhr-table">
            <thead>
                <tr>
                    <th class="bhr-column-head bhr-column-head--gray" scope="col">{{ 'global.organisation' | trans() }}</th>
                    <th class="bhr-column-head bhr-column-head--gray" scope="col">{{ 'global.acronym' | trans() }}</th>
                    <th class="bhr-column-head bhr-column-head--gray" scope="col">{{ 'global.prefixes' | trans() }}</th>
                    <th class="bhr-column-head bhr-column-head--gray" scope="col">
                        <span class="sr-only">{{ "Edit organisation" | trans() }}</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for organisation in organisations %}
                    <tr>
                        <td><span class="font-bold">{{ organisation.name }}</span></td>
                        <td>{{ organisation.department.shortTag }}</td>
                        <td>
                            {% for prefix in organisation.documentPrefixes %}
                                {{ prefix.prefix }}{% if not loop.last %},{% endif %}
                            {% endfor %}
                        </td>
                        <td class="text-right">
                            <a class="js-clickable-row__focusable" href="{{ path('app_admin_user_organisation_edit', { id: organisation.id }) }}">
                                <span class="sr-only">{{ 'global.details' | trans() }} {{ organisation.name }}</span>
                                <twig:Admin:Icon name="chevron-right" />
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
