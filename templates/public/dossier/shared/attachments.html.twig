{% if attachments | default([]) | length > 0 %}
    {% set fallbackTitle = ('public.dossiers.attachments' | trans) ~ ' ' ~ (dossier.type | trans | lower) %}
    <div class="mt-16">
        <h2 class="woo-h2 woo-h2-spacing">
            {{ title | default(fallbackTitle) }}
    </h2>
    <div class="woo-responsive-table">
        <table class="woo-table">
            <caption class="sr-only">
                {{ title | default(fallbackTitle) }}
            </caption>
            <tbody>
                {% for attachment in attachments %}
                <tr data-e2e-name="dossier-attachments-row">
                    <th class="woo-table-cell-light w-64 min-w-64" scope="row">{{ attachment.type | trans | capitalize }}</th>
                    <td>
                        <a class="woo-a" href="{{ attachment.detailsUrl }}">{{ attachment.name }}</a> ({{ attachment.sourceType | trans }}, {{ attachment.size | size }})
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endif %}
