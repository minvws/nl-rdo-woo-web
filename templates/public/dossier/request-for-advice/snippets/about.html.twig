<div class="mt-16">
    <h2 class="woo-h2 woo-h2-spacing">{{ 'public.dossiers.request-for-advice.about' | trans }}</h2>

    <div class="woo-responsive-table">
        <table class="woo-table">
            <caption class="sr-only">
                {{ 'public.dossiers.request-for-advice.about' | trans }}
            </caption>
            <tbody>
            <tr>
                <th class="woo-table-cell-light w-64 min-w-64" scope="row">
                    {{ documentType | default(dossier.type | trans | capitalize) }}
                </th>
                <td>
                    <a class="woo-a" href="{{ document.detailsUrl }}">{{ document.name }}</a> <span>({{ document.sourceType | trans }}, {{ document.size | size }})</span>
                </td>
            </tr>
            <tr>
                <th class="woo-table-cell-light" scope="row">
                    {{ dateLabel | default('global.date' | trans) }}
                </th>
                <td data-e2e-name="dossier-metadata-period">
                    {% block content %}
                        <twig:Date date="{{ dossier.date }}" />
                    {% endblock %}
                </td>
            </tr>
            <tr>
                <th class="woo-table-cell-light" scope="row">{{ 'global.responsible_parties' | trans }}</th>
                <td data-e2e-name="dossier-metadata-responsible">
                    {{ dossier.mainDepartment.name }}
                </td>
            </tr>
            <tr>
                <th class="woo-table-cell-light" scope="row">
                    {{ 'public.dossiers.type' | trans }}
                </th>
                <td>
                    <p>{{ dossier.type | trans | capitalize }}</p>
                </td>
            </tr>
            {% if dossier.hasSubject %}
                <tr>
                    <th class="woo-table-cell-light" scope="row">
                        {{ 'public.dossiers.subject' | trans }}
                    </th>
                    <td>
                        <p><a class="woo-a" href="{{ dossier.subject.searchUrl }}">{{ dossier.subject.name }}</a></p>
                    </td>
                </tr>
            {% endif %}
            {% if dossier.link is not empty %}
                <tr>
                    <th class="woo-table-cell-light" scope="row">
                        {{ 'public.dossiers.request-for-advice.link' | trans }}
                    </th>
                    <td>
                        <a class="woo-a" target="_blank" href="{{ dossier.link }}">{{ dossier.link }}</a>
                    </td>
                </tr>
            {% endif %}
            {% if dossier.advisoryBodies | length > 0 %}
                <tr>
                    <th class="woo-table-cell-light w-64 min-w-64" scope="row">{{ 'public.dossiers.request-for-advice.advisory-bodies' | trans }}</th>
                    <td>
                        {% for advisoryBody in dossier.advisoryBodies %}
                            <p>{{ advisoryBody }}</p>
                        {% endfor %}
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
