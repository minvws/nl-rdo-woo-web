{% if documents | length > 0 %}
<div class="mt-16" id="{{ id }}" data-e2e-name="documents-section">
    <h2 class="woo-h2 woo-h2-spacing">{{ title }}</h2>

    {% if searchUrl is defined %}
        <twig:Public:DownloadFilesForm
            action=""
            canDownload="0"
            searchUrl="{{ searchUrl }}"
        />
    {% endif %}

    <twig:Public:Publication:WooDecision:DocumentsTable
        documents="{{ documents }}"
        dossier="{{ dossier }}"
        fragment="{{ '#' ~ id }}"
        isSortable="{{ isSortable ?? true }}"
        title="{{ title }}"
    />
</div>
{% endif %}
