{% extends 'public/base.html.twig' %}

{% set page_title = 'public.global.label.home' | trans() %}

{% block body %}
    <div class="woo-container woo-container--sm">
        <div class="pb-8 lg:pb-16 lg:-mt-4">
            {% include "public/home/snippets/intro.html.twig" %}
        </div>
    </div>

    {% import "public/macros/facet.html.twig" as macro %}
    <section class="bg-woo-anti-flash-white py-8 lg:py-16">
        <div class="woo-container woo-container--sm pb-10">
            <h2 class="woo-h2 woo-readable-width">{{ 'public.browse.title' | trans | raw }}</h2>
        </div>

        <div class="woo-container">
            <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-8">
                {{ macro.facet_preview('categories.category.type' | trans(), constant('App\\Service\\Search\\Model\\FacetKey::TYPE'), facets) }}
                {{ macro.facet_preview('categories.category.department' | trans(), constant('App\\Service\\Search\\Model\\FacetKey::DEPARTMENT'), facets) }}
                {{ macro.facet_preview('categories.category.grounds' | trans(), constant('App\\Service\\Search\\Model\\FacetKey::GROUNDS'), facets) }}
            </div>

            <p class="text-center mt-9">
                <twig:Public:ArrowedBoldLink to="{{ path('app_browse') }}">{{ 'categories.label.all-categories' | trans }}</twig:Public:ArrowedBoldLink>
            </p>
        </div>
    </section>

    <section class="pt-8 lg:pt-16">
        <div class="woo-container woo-container--sm">
            <div class="woo-rich-text woo-readable-width">
                {% include "public/snippets/about-platform.html.twig" %}
            </div>
        </div>
    </section>
{% endblock %}
