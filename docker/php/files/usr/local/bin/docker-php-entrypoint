#!/usr/bin/env bash
set -e

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- apache2-foreground "$@"
fi

eval $( fixuid -q )

if [ "${APP_ID,,}" = "public" ]; then
    sudo a2ensite public-woo 1> /dev/null
elif [ "${APP_ID,,}" = "admin" ]; then
    sudo a2ensite admin-woo 1> /dev/null
elif [ "${APP_ID,,}" = "publication_api" ]; then
    sudo a2ensite publication-api-woo 1> /dev/null
    sudo a2ensite publication-api-woo-ssl 1> /dev/null
fi

exec "$@"
